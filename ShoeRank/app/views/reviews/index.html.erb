<% if @shoe %>
  <h1>Reviews for Shoe Model: <%= @shoe.model%> Brand: <%= @shoe.brand_name%></h1>
<% else %>
  <h1>All the Reviews </h1>
<% end %>

<ul>
<% @reviews.each do |review| %>

  <li>
    <%= review.shoe.model%>: <%= link_to review.title, review_path(review)%> - <%= review.rating%>
  </li> <br>

<% end %>
</ul>
