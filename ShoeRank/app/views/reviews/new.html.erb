<%=  display_header(@review)%>

<%= render partial: 'layouts/errors', locals: {object: @review}  %>

<%= form_for(@review) do |f|%>
  <% if params[:shoe_id] %>
    <%= f.hidden_field :shoe_id %>
  <% else %>
    <div>
      <%= f.label :shoe_id, "Select a Shoe" %>
      <%= f.collection_select :shoe_id, Shoe.alpha, :id, :brand, include_blank: true %>
    </div>
  <% end %>
  <div>
    <%= f.label :rating %>
    <%= f.number_field :rating, min:0, max:5 %>
  </div>
  <br>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <br>
  <div>
    <%= f.label :content %>
    <%= f.text_area :content, size: "25x10" %>
  </div>
  <br>

  <%= f.submit %>

<% end %>
